---
import { articule } from '../common/articles';
import NewArticule from './NewArticule.astro';

interface Props {
  styles?: string;
}

const { styles } = Astro.props;
---

<section class={`bg-Very-dark-blue text-Off-white py-4 px-6 mb-16 ${styles}`}>
  <h1 class="text-Soft-orange font-bold text-[2rem]">New</h1>
  {
    articule.slice(0,3).map((articule) => (
      <NewArticule {...articule}/>
    ))
  }
</section>
